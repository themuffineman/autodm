{
  "name": "LinkedIn AutoDm System",
  "version": "1",
  "manifest_version": 3,
  "description": "Automates the sending of LinkedIn Dms right in your browser.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidepanel.js"]
    }
  ]
}
